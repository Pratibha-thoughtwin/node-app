<html>

    <head>
        <title>Grocery APP test</title>
        <style>
            a {
                text-decoration: none;
                color: rgb(0, 0, 0);
            }

        </style>
    </head>

    <body>
        <h1>Jenkins is Awesome CI tool.</h1>
        <ul>
            <% todolist.forEach(function(todo, index) { %>
            <li>
                <a href="/todo/delete/<%= index %>">✘</a>
                <a href="/todo/<%= index %>">✎</a>
                <%- todo %>
            </li>
            <% }); %>
        </ul>

        <form action="/todo/add/" method="post">
            <p>
                <label for="newtodo">What you wanna buy?</label>
                <input type="text" name="newtodo" id="newtodo" autofocus />
                <input type="submit" value="Add in list" />
            </p>
        </form>
    </body>

</html>
